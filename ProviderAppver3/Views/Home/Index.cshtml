
@{




    Layout = null;


    ViewBag.Title = "Home Page";


}


<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">


<link href="~/Content/Home.css" rel="stylesheet" />


<link href="https://fonts.googleapis.com/css?family=Poller+One" rel="stylesheet">


<body>


    <div class="container-fluid">


        <div class="row">


            <div class="col-lg-12">


                <div class="overlay">


                    <span id="login"><a class="btn btn-default" href="~/Account/Login">Login</a></span>


                    <h1 class="text-center">Gigs</h1>


                    <p id="tag">Find services near you in real time</p>


                </div>


            </div>


        </div>


        <div class="row" id="rowscreen">


            <div class="col-lg-3 col-sm-2 col-xs-pull-0"></div>


            <div class="col-lg-6 col-sm-8 col-xs-12">


                <div class="screen">


                    <h4 class="text-center">With Gigs You Can:</h4>


                    <div class="list-group">


                        <ul class="text-justify">


                            <li>Search for any service</li>


                            <li>View provider ratings and quotes</li>


                            <li>Pay for services on the fly</li>


                            <li>Register Now to Get Started</li>


                        </ul>


                    </div>


                    <a class="btn button text-center" style="vertical-align:middle" href="~/Account/Register"><span>Sign Up</span></a>


                </div>


            </div>


            <div class="col-lg-3 col-sm-2 col-xs-pull-0"></div>


        </div>


        <div class="row">


            <div class="overlay3 text-center fixed-bottom">


                <a href="~/Home/About">About</a>


                <a href="~/Home/Contact">Contact</a>


                <p class="text-center">&copy; @DateTime.Now.Year - Gigs LLC</p>


            </div>


        </div>


    </div>


    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>


    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>







</body>
